@using AviaMare.Models.Home
@model List<TicketViewModel>

<style>
    .ticket-section {
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        min-height: 20vh;
    }

    .ticket {
        width: 90%;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin: 5%;
        border: 1px solid #ddd;
    }

    .ticket-header {
        background: #0078d7;
        color: #fff;
        padding: 15px;
        text-align: center;
    }

        .ticket-header h2 {
            margin: 0;
            font-size: 18px;
        }

    .ticket-body {
        padding: 15px;
    }

        .ticket-body .info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

            .ticket-body .info span {
                font-weight: bold;
            }

    .ticket-footer {
        background: #f7f7f7;
        padding: 10px 15px;
        display: flex;
        justify-content: space-between;
        border-top: 1px solid #ddd;
    }

        .ticket-footer .price {
            color: #0078d7;
            font-weight: bold;
        }

<div class="py-10">
    <section class="flex gap-8 items-start">
        <div class="basis-1/3">
            <form class="bg-orange-50 p-6 rounded-md mb-6">
                <h2 class="text-orange-950 font-bold text-lg mb-4">
                    Поиск рейсов
                </h2>
                <div class="flex flex-col gap-4">
                    <label class="flex flex-col">
                        <span class="text-neutral-950">Откуда</span>
                        <input type="text"
                               placeholder="например, Нью-Йорк"
                               class="border border-orange-300 p-2 rounded-md" />
                    </label>
                    <label class="flex flex-col">
                        <span class="text-neutral-950">Куда</span>
                        <input type="text"
                               placeholder="например, Лос-Анджелес"
                               class="border border-orange-300 p-2 rounded-md" />
                    </label>
                    <label class="flex flex-col">
                        <span class="text-neutral-950">Дата</span>
                        <input type="date"
                               class="border border-orange-300 p-2 rounded-md" />
                    </label>
                    <button class="bg-orange-500 text-white py-2 px-4 rounded-md">
                        Найти
                    </button>
                </div>
            </form>
            <form class="bg-orange-50 p-6 rounded-md">
                <h2 class="text-orange-950 font-bold text-lg mb-4">
                    Фильтр рейсов
                </h2>
                <div class="flex flex-col gap-4">
                    <label class="flex flex-col">
                        <span class="text-neutral-950">Ценовой диапазон</span>
                        <input type="range" min="100" max="1000" class="w-full" />
                    </label>
                    <label class="flex flex-col">
                        <span class="text-neutral-950">Удобная дата</span>
                        <input type="date"
                               class="border border-orange-300 p-2 rounded-md" />
                    </label>
                    <button class="bg-orange-500 text-white py-2 px-4 rounded-md">
                        Применить фильтры
                    </button>
                </div>
            </form>
        </div>
        <div class="basis-2/3">
            <h2 class="text-orange-950 font-bold text-lg mb-4">
                Популярные направления
            </h2>
            <div class="grid grid-cols-3 gap-6 mb-8">
                <div class="bg-orange-100 p-4 rounded-md">
                    <img src="https://tools-api.webcrumbs.org/image-placeholder/150/100/travel/5"
                         alt="destination"
                         class="w-full h-[100px] object-cover rounded-md" />
                    <h3 class="text-neutral-950 mt-2 font-medium">Париж</h3>
                </div>
                <div class="bg-orange-100 p-4 rounded-md">
                    <img src="https://tools-api.webcrumbs.org/image-placeholder/150/100/travel/6"
                         alt="destination"
                         class="w-full h-[100px] object-cover rounded-md" />
                    <h3 class="text-neutral-950 mt-2 font-medium">Токио</h3>
                </div>
                <div class="bg-orange-100 p-4 rounded-md">
                    <img src="https://tools-api.webcrumbs.org/image-placeholder/150/100/travel/7"
                         alt="destination"
                         class="w-full h-[100px] object-cover rounded-md" />
                    <h3 class="text-neutral-950 mt-2 font-medium">Дубай</h3>
                </div>
            </div>
            <h2 class="text-orange-950 font-bold text-lg mb-4">
                Лучшие предложения
            </h2>
            <div class="grid grid-cols-2 gap-6">
                <div class="bg-orange-100 p-4 rounded-md">
                    <img src="https://tools-api.webcrumbs.org/image-placeholder/250/150/travel/1"
                         alt="destination"
                         class="w-full h-[150px] object-cover rounded-md" />
                    <h3 class="text-neutral-950 mt-2 font-medium">
                        Нью-Йорк — Париж
                    </h3>
                    <p class="text-neutral-700">От $450</p>
                </div>
                <div class="bg-orange-100 p-4 rounded-md">
                    <img src="https://tools-api.webcrumbs.org/image-placeholder/250/150/travel/2"
                         alt="destination"
                         class="w-full h-[150px] object-cover rounded-md" />
                    <h3 class="text-neutral-950 mt-2 font-medium">
                        Лондон — Токио
                    </h3>
                    <p class="text-neutral-700">От $700</p>
                </div>
                <div class="bg-orange-100 p-4 rounded-md">
                    <img src="https://tools-api.webcrumbs.org/image-placeholder/250/150/travel/3"
                         alt="destination"
                         class="w-full h-[150px] object-cover rounded-md" />
                    <h3 class="text-neutral-950 mt-2 font-medium">
                        Сидней — Дубай
                    </h3>
                    <p class="text-neutral-700">От $600</p>
                </div>
                <div class="bg-orange-100 p-4 rounded-md">
                    <img src="https://tools-api.webcrumbs.org/image-placeholder/250/150/travel/4"
                         alt="destination"
                         class="w-full h-[150px] object-cover rounded-md" />
                    <h3 class="text-neutral-950 mt-2 font-medium">
                        Берлин — Нью-Йорк
                    </h3>
                    <p class="text-neutral-700">От $500</p>
                </div>
            </div>
        </div>
    </section>
        .ticket-footer .seats {
            font-size: 14px;
            color: #555;
        }
</style>
<div class="ticket-section">
    <div class="tickets">
        @foreach (var ticket in Model)
        {
            <div class="ticket">
                <div class="ticket-header">
                    <h2>От: @ticket.Departure — До: @ticket.Destination</h2>
                </div>
                <div class="ticket-body">
                    <div class="info">
                        <div>Время в полёте:</div>
                        <span>@ticket.Time</span>
                    </div>
                    <div class="info">
                        <div>Время вылета:</div>
                        <span>@ticket.TakeOffTime</span>
                    </div>
                    <div class="info">
                        <div>Время прилёта:</div>
                        <span>@ticket.LandingTime</span>
                    </div>
                    <div class="info">
                        <div>Самолёт:</div>
                        <span>@ticket.IdPlane</span>
                    </div>
                </div>
                <div class="ticket-footer">
                    <div class="price">@ticket.Cost</div>
                    <div class="seats">Мест осталось: нет данных</div>
                </div>
            </div>
        }
    </div>
</div>