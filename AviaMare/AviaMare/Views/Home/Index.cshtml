<style>
    .ticket-section {
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        min-height: 20vh;
    }

    .ticket {
        width: 90%;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin: 5%;
        border: 1px solid #ddd;
    }

    .ticket-header {
        background: #0078d7;
        color: #fff;
        padding: 15px;
        text-align: center;
    }

        .ticket-header h2 {
            margin: 0;
            font-size: 18px;
        }

    .ticket-body {
        padding: 15px;
    }

        .ticket-body .info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

            .ticket-body .info span {
                font-weight: bold;
            }

    .ticket-footer {
        background: #f7f7f7;
        padding: 10px 15px;
        display: flex;
        justify-content: space-between;
        border-top: 1px solid #ddd;
    }

        .ticket-footer .price {
            color: #0078d7;
            font-weight: bold;
        }

        .ticket-footer .seats {
            font-size: 14px;
            color: #555;
        }
</style>
