@using AviaMare.Services
@inject AuthService authService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AviaMare.styles.css" asp-append-version="true" />
    @RenderSection("Styles", false)
</head>
<body className ="w-[1200px] min-h-[800px] bg-white shadow-lg rounded-lg">
    <div>
        <header className="w-full bg-orange-100 py-6 px-8 flex justify-between items-center">
            <div className="flex items-center gap-4">
                <i className="material-symbols-outlined text-orange-500 text-3xl">flight</i>
                <h1 className="font-title text-orange-950 text-2xl">AviaMare</h1>
            </div>
            <nav className="flex gap-6">
                <a href="#" className="text-neutral-950 hover:text-orange-500">Главная</a>
                <a href="#" className="text-neutral-950 hover:text-orange-500">Рейсы</a>
                <a href="#" className="text-neutral-950 hover:text-orange-500">Регистрация</a>
                <a href="#" className="text-neutral-950 hover:text-orange-500">Вход</a>
            </nav>
            <div className="flex items-center gap-4">
                <a href="#" className="text-neutral-950 hover:text-orange-500 py-2 px-4 rounded-md bg-orange-200">
                    ru/en
                </a>
                <a href="#" className="text-neutral-950 hover:text-orange-500 py-2 px-4 rounded-md bg-orange-200">
                    Профиль
                </a>
            </div>
        </header>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer className="w-full bg-orange-200 py-4 px-8 flex justify-between items-center">
        <p className="text-neutral-700">© 2023 AviaMare. Все права защищены.</p>
        <div className="flex gap-4">
            <a href="#" className="text-orange-500">
                <i className="fa-brands fa-facebook" />
            </a>
            <a href="#" className="text-orange-500">
                <i className="fa-brands fa-twitter" />
            </a>
            <a href="#" className="text-orange-500">
                <i className="fa-brands fa-instagram" />
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
